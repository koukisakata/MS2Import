<div class="container">
  <div class="row">
    <div class="col-12">
      <h1 class="text-danger text-center">
        Log in
      </h1>
    </div>
  </div>
</div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="container">
    <div class="row">
      <div class="field col-12">
        <div class="row">
          <%= f.label :email,class:"col-2 text-right w-100" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class:"col-10"%>
        </div>
      </div>
      <div class="field col-12">
        <div class="row">
          <%= f.label :password,class:"col-2 text-right w-100" %>
          <%= f.password_field :password, autocomplete: "current-password",class:"col-10" %>
        </div>
      </div>
    </div>
    <div class="row justify-content-end">
      <div class="actions text-center">
        <%= f.submit "Login",class:"btn btn-info" %>
      </div>
    </div>
  </div>
<% end %>
<div class="container mt-5">
  <div class="row justify-content-end">
    <%= render "devise/shared/links" %>
  </div>
</div>